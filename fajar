    <script>
        function showSection(id) {
            document.querySelectorAll('section').forEach(sec => sec.classList.add('hidden'));
            document.getElementById(id).classList.remove('hidden');
        }
        // Tambahkan ScrollReveal untuk efek muncul bertahap
        // (Install via CDN: https://cdn.jsdelivr.net/npm/scrollreveal@4.0.9/dist/scrollreveal.min.js)
        ScrollReveal().reveal('.fade-in', { delay: 200, distance: '50px', origin: 'bottom' });
